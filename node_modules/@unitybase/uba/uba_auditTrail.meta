{
  "caption": "Audit",
  "description": "Data changes audit trail",
  "connectionName": "",
  "sqlAlias": "audtr",
  "cacheType": "None",
  "descriptionAttribute": "entity",
  "documentation": "All DML statement for entity with mixin 'audit' logged here",
  "attributes": [
    {
      "name": "entity",
      "dataType": "String",
      "size": 32,
      "caption": "Entity code",
      "allowNull": false
    },
    {
      "name": "entityinfo_id",
      "dataType": "ID",
      "caption": "Instance ID",
      "allowNull": false
    },
    {
      "name": "actionType",
      "dataType": "Enum",
      "enumGroup": "AUDIT_ACTION",
      "caption": "Action",
      "allowNull": false
    },
    {
      "name": "actionUser",
      "dataType": "ID",
      "documentation": "uba_user.ID. Data type entity is not used here because for huge audit table we want to move it to another DB and do not want to have a constraint",
      "caption": "UserID",
      "allowNull": false
    },
    {
      "name": "actionUserName",
      "dataType": "String",
      "size": 128,
      "documentation": "User name from uba_user as it named on the moment of auditing",
      "caption": "User"
    },
    {
      "name": "actionTime",
      "dataType": "DateTime",
      "caption": "Action time",
      "allowNull": false
    },
    {
      "name": "remoteIP",
      "dataType": "String",
      "size": 40,
      "caption": "Remote IP",
      "documentation": "Caller remote IP address. NULL in case of localhost"
    },
    {
      "name": "parentEntity",
      "dataType": "String",
      "size": 32,
      "caption": "Parent entity name",
      "allowNull": true
    },
    {
      "name": "parentEntityInfo_id",
      "dataType": "BigInt",
      "caption": "Parent instance ID",
      "allowNull": true
    },
    {
      "name": "request_id",
      "dataType": "BigInt",
      "caption": "Request ID",
      "documentation": "Unique request ID. Can be used to revert all operations made by one request",
      "allowNull": true
    },
    {
      "name": "fromValue",
      "dataType": "Text",
      "caption": "Old values",
      "allowNull": true
    },
    {
      "name": "toValue",
      "dataType": "Text",
      "caption": "New values",
      "allowNull": true
    }
  ],
  "mixins": {
    "mStorage": {
      "simpleAudit": false,
      "safeDelete": false
    },
    "audit": {
      "enabled": false
    }
  },
  "dbExtensions": {
    "idx_audtr_entity": {
      "type": "INDEX",
      "definition": {
        "keys": {
          "entityinfo_id": {}
        }
      }
    },
    "idx_audtr_parententinfoid": {
      "type": "INDEX",
      "definition": {
        "keys": {
          "parentEntityInfo_id": {}
        }
      }
    }
  }
}